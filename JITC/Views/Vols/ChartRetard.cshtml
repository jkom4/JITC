@model IEnumerable<JITC.Models.Vol>

@{
    ViewData["Title"] = "View";
}

<h1>Statistique retard</h1>

<p>
    Nous avons : @Model.Count() trajets en retard
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AeroportDepart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AeroportArrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureDepartPrevue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureArrivePrevue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureDepartReelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeureArriveReelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pilote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            
           <th>
                @Html.DisplayNameFor(model => model.Appareil)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Raison)
            </th>
          
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AeroportDepart.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AeroportArrive.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureDepartPrevue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureArrivePrevue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureDepartReelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeureArriveReelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pilote.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appareil.Nom)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Raison)
            </td>
           
            
        </tr>
}
    </tbody>
</table>
